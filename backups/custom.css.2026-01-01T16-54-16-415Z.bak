/* Discord Cyan Theme - Soft & Dark */

/* Background colors - Dark with cyan accents */
.theme-dark {
    --background-primary: #0a0e12 !important;
    --background-secondary: #0d1117 !important;
    --background-secondary-alt: #131920 !important;
    --background-tertiary: #050810 !important;
    --background-accent: #1a2332 !important;
    --background-floating: #0d1117 !important;
    --background-modifier-accent: rgba(79, 193, 194, 0.15) !important;
}

/* Cyan accents */
.theme-dark {
    --brand-experiment: #4fc1c2 !important;
    --brand-experiment-hover: #5ed4d5 !important;
    --text-link: #5ed4d5 !important;
    --interactive-active: #4fc1c2 !important;
    --interactive-hover: #3aa5a6 !important;
}

/* Chat messages with subtle cyan tint */
.message-2CShn3 {
    background: rgba(79, 193, 194, 0.03) !important;
    border-left: 2px solid rgba(79, 193, 194, 0.1) !important;
    border-radius: 6px !important;
    padding: 8px 12px !important;
    margin: 4px 0 !important;
    transition: all 0.2s ease;
}

/* Hover effect - cyan glow */
.message-2CShn3:hover {
    background: rgba(79, 193, 194, 0.08) !important;
    border-left-color: rgba(79, 193, 194, 0.3) !important;
    box-shadow: 0 0 10px rgba(79, 193, 194, 0.1) !important;
}

/* Server list - darker */
.wrapper-1_HaEi {
    background: #050810 !important;
}

/* Selected server - cyan highlight */
.wrapper-1_HaEi[aria-label*="selected"] {
    background: rgba(79, 193, 194, 0.15) !important;
}

/* Channels sidebar */
.sidebar-1tnWFu {
    background: #0d1117 !important;
}

/* Selected channel - cyan accent */
.modeSelected-3DmyhH {
    background: rgba(79, 193, 194, 0.15) !important;
    color: #5ed4d5 !important;
}

.modeSelected-3DmyhH:hover {
    background: rgba(79, 193, 194, 0.2) !important;
}

/* Input box - cyan border on focus */
.channelTextArea-1FufC0 {
    background: #0a0e12 !important;
}

.channelTextArea-1FufC0:focus-within {
    border-color: #4fc1c2 !important;
    box-shadow: 0 0 5px rgba(79, 193, 194, 0.3) !important;
}

/* Buttons - cyan theme */
.button-f2h6uQ {
    background: #4fc1c2 !important;
    color: #0a0e12 !important;
}

.button-f2h6uQ:hover {
    background: #5ed4d5 !important;
}

/* Scrollbar - cyan */
::-webkit-scrollbar-thumb {
    background: rgba(79, 193, 194, 0.3) !important;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(79, 193, 194, 0.5) !important;
}

/* User panel - bottom */
.container-YkUktl {
    background: #050810 !important;
    border-top: 1px solid rgba(79, 193, 194, 0.1) !important;
}

/* Mention badge - cyan */
.numberBadge-37OJ3S {
    background: #4fc1c2 !important;
    color: #0a0e12 !important;
}

/* Voice connected - cyan indicator */
.rtcConnectionStatusConnected-c1vXdf {
    color: #4fc1c2 !important;
}